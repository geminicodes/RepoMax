###############################################################################
# ReadyRepo root env example (server)
# Copy to `.env` for local dev.
#
# Client env lives in `client/.env.example` (copy to `client/.env.local`).
###############################################################################

# Server (Express)
NODE_ENV=development
PORT=8080

# CORS allowlist (local dev Vite default)
CLIENT_ORIGIN=http://localhost:5173

# Network / timeouts
REQUEST_TIMEOUT_MS=30000

# GitHub (optional token for higher rate limits)
GITHUB_API_BASE_URL=https://api.github.com
GITHUB_TOKEN=
GITHUB_CACHE_TTL_MS=300000

# Firebase Admin / Google Cloud (provide ONE credential option)
FIREBASE_PROJECT_ID=
FIREBASE_SERVICE_ACCOUNT_JSON={}

GOOGLE_APPLICATION_CREDENTIALS=
GCP_SERVICE_ACCOUNT_JSON=
GOOGLE_CLOUD_CREDENTIALS_JSON={}

# Gemini
GEMINI_API_KEY=
GEMINI_MODEL=gemini-1.5-flash

# Startup checks (recommended true in prod)
STARTUP_CHECKS_ENABLED=true

