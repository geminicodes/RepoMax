###############################################################################
# ReadyRepo - root env
# - Server reads from `.env` (recommended) or process env.
# - Client reads from `client/.env.local` (Vite).
###############################################################################

###############################################################################
# Server
###############################################################################
NODE_ENV=development
PORT=8080

# CORS
CLIENT_ORIGIN=http://localhost:5173

# Network / timeouts
REQUEST_TIMEOUT_MS=30000

# GitHub (public API only; optional token for higher rate limits)
GITHUB_API_BASE_URL=https://api.github.com
GITHUB_TOKEN=

# Cache
GITHUB_CACHE_TTL_MS=300000

###############################################################################
# Google Cloud
###############################################################################
# Project IDs
GCP_PROJECT_ID=your-gcp-project-id
GOOGLE_CLOUD_PROJECT_ID=
FIREBASE_PROJECT_ID=your-firebase-project-id

# Credentials (provide ONE of these)
GOOGLE_APPLICATION_CREDENTIALS=
GCP_SERVICE_ACCOUNT_JSON=
GOOGLE_CLOUD_CREDENTIALS_JSON={}

# Gemini (Google AI Studio)
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-1.5-flash

# Tone analysis caching
TONE_CACHE_TTL_HOURS=24

# Startup reachability checks (recommended true in prod)
STARTUP_CHECKS_ENABLED=true
